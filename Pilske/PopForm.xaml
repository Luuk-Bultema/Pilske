<Window x:Class="Pilske.PopForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pilske"
        mc:Ignorable="d"
        Title="PopForm" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgBieren" HorizontalAlignment="Left" Height="260" Margin="125,55,0,0" VerticalAlignment="Top" Width="310" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding bid}"  Header="Naam Bier"/>
                <DataGridTextColumn Binding="{Binding Teller}" ClipboardContentBinding="{x:Null}" Header="Aantal"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
